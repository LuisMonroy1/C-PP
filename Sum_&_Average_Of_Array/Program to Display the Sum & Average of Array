// Lect12_10.12_W8.2_SumAndAvg.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;

double product(double sum, double count, double average)
{
	// initialize an array without specifying size
	double numbers[] = { 7, 5, 6, 12, 35, 27 };
	for (const double& n : numbers) {
		cout << n << "  ";
		//  calculate the sum
		sum += n;
		// count the no. of array elements
		++count;
	}
	// print the sum
	cout << "\nTheir Sum = " << sum << endl;
	// find the average
	average = sum / count;
	cout << "Their Average = " << average << endl;
	return sum;
	return average;
}
int main() 
{
	cout << "The numbers are: ";
	//  print array elements
	// use of range-based for loop
	int a=0,b=0,c=0;
	product(a,b,c);
}
