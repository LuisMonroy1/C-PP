// Lect13_10.26_W10.2_CountNofWord.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;

void count(char S[])
{
    int words = 0;
    for (int i = 0; S[i] != '\0'; i++)
    {
        if (S[i] == ' ')
            words++;                   //Checking for spaces
    }
    cout << "The number of words=" << words + 1 << endl;
}

int main()
{

}
